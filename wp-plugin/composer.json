{
  "name": "{{ package.vendor }}/{{ package.name }}",
  "description": "{{ description }}",
  "type": "wordpress-plugin",
  "license": "{{ license }}",
  "authors": [
    {
      "name": "{{ author.name }}",
      "email": "{{ author.email }}"
    }
  ],
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true,
    "platform-check": false
  },
  "repositories": {
    "bluehost-satis": {
      "type": "composer",
      "url": "https://bluehost.github.io/satis/",
      "only": [
        "bluehost/*",
        "endurance/*",
        "mojoness/*",
        "newfold/*"
      ]
    }
  },
  "require": {}
}
